@model GiftStore.Models.Projectgift

@{
    ViewData["Title"] = "CreateGifts";
    Layout = "~/Views/Shared/_LayoutMaker.cshtml";
}

<div class="container m-4 p-4">


    <div class="col-12 text-center">
        <h2 class="contact-title">Add New Gift</h2>
    </div>
    <div class="col-lg-12">
        <form class="form-contact contact_form" enctype="multipart/form-data" asp-action="CreateGifts" asp-controller="GiftMaker">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="Name" placeholder="Gift Name">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="Price" placeholder="Gift Price">
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <textarea class="form-control w-100" asp-for="Description" cols="30" rows="9" placeholder="Gift Description"></textarea>
                    </div>
                </div>
                <div class=" col-sm-4">
                    <div class=" form-group">
                        <input class="form-control" asp-for="ImageFile" type="file">
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn_3 button-contactForm">Add</button>
            </div>
        </form>
    </div>
</div>