@model GiftStore.Models.Projectgift

@{
    ViewData["Title"] = "SingleProduct";
    Layout = "~/Views/Shared/_LayoutSender.cshtml";
}

<!--================Single Product Area =================-->
<div class="container">
    <div class="row justify-content-center m-4 p-4">
        <div class="col-lg-12 text-center">
            @if (!string.IsNullOrEmpty(ViewData["Error"] as string))
            {
                <div class="alert alert-danger" role="alert">@ViewData["Error"]</div>
            }
            <img src="@Url.Content("~/Images/GiftImages/"+ Model?.Image)" style="width: 250px" alt="#" class="img-fluid">
        </div>
        <div class="col-lg-8">
            <div class="single_product_text text-center" style="margin-top:20px">
                <h3>
                    @Model?.Name
                </h3>
                <p>
                    @Model?.Description
                </p>
                <p>@Model?.Price JOD</p>
                <div class="card_area">
                    <div class="add_to_cart">
                        <a asp-action="AddCart" asp-controller="GiftSender" asp-route-id="@Model?.Id" class="btn_3">Add To Cart</a>
                        <a asp-action="Product" asp-controller="GiftSender" class="btn_3">Back</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Single Product Area =================-->