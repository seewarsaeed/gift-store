@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = ViewData["user"] as GiftStore.Models.Projectuser;
}

<div class="container-fluid pt-4 px-4">

    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
                <img src="@Url.Content("~/Images/UserImages/"+ user?.Image)" alt="Admin" class="rounded-circle" width="150">
                <div class="mt-3">
                    <h4>@user?.Fname @user?.Lname</h4>

                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body align-items-center text-center">
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">User Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @user?.Username
                </div>
            </div>
            <hr>

            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">First Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @user?.Fname
                </div>
            </div>
            <hr>

            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Last Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @user?.Lname
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @user?.Email
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Phone</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @user?.Pnumber
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-3">
                    <h6 class="mb-0">Address</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                    @user?.Address
                </div>
            </div>

        </div>
    </div>
</div>

