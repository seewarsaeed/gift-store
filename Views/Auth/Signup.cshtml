@model List<GiftStore.Models.Projectcategory>
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!--================Signup_Part Area =================-->
<section class="login_part ">
    <div class="container m-4 p-4">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner" style="margin:0">
                        <h2>Already Have an account?</h2>
                        <p>
                            Sign in and unlock a world of gifting possibilities. Explore our Gift Website and make someone's day extra special.
                        </p>
                        <a asp-action="Login" asp-controller="Auth" class="btn_3">Lgoin</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>
                            Join Our Lovely Family <br>
                            Please Signup
                        </h3>
                        <form class="row contact_form" asp-action="Signup" enctype="multipart/form-data" id="Signup-form">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!-- Display validation summary -->
                            @if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
                            {
                                <div class="alert alert-success" role="alert">
                                    @ViewData["SuccessMessage"]
                                </div>
                            }
                            <div class="col-md-12 form-group p_star">
                                <input name="Fname" type="text" class="form-control"
                                       placeholder="First Name">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input name="Lname" type="text" class="form-control"
                                       placeholder="Last Name">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input name="Email" type="email" class="form-control"
                                       placeholder="Email">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input name="Address" type="text" class="form-control"
                                       placeholder="Address">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input name="Pnumber" type="text" class="form-control"
                                       placeholder="Phone Numer">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="file" name="ImageFile" class="form-control" />
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input name="Username" type="text" class="form-control"
                                       placeholder="Username">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input name="Password" type="password" class="form-control"
                                       placeholder="Password">
                            </div>

                            <div class="col-md-12 form-group">
                                <div class="creat_account d-flex align-items-center">
                                    <input type="checkbox" id="f-option" name="selector" value="true">
                                    <label for="f-option">Sign as Gift Maker?</label>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <div class="custom-select-wrapper">
                                        <div class="custom-select" style="display:none">
                                            <span class="custom-select-trigger">Select Category</span>
                                            <div class="custom-options">
                                                <div class="custom-option" data-value="">Select Category</div>
                                                @if (Model != null)
                                                {
                                                    @foreach (var category in Model)
                                                    {
                                                        <div class="custom-option" data-value="@category?.Id.ToString()">@category?.Name</div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <input type="hidden" name="category" id="category-input">
                                    </div>
                                </div>

                                <button type="submit" name="Signup" id="signup-button" value="Signup" class="btn_3">
                                    Signup
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Signup_Part end =================-->
<!--::footer_part Start::-->
