@model GiftStore.Models.Projectuser

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<!--================login_part Area =================-->
<section class="login_part ">
    <div class="container m-4 p-4">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner">
                        <h2>New to our Shop?</h2>
                        <p>
                            Experience the joy of giving and receiving with our Gift Website. Whether you're a gift sender or a gift maker, join us and spread happiness in a simple and delightful way
                        </p>
                        <a asp-action="Signup" asp-controller="Auth" class="btn_3">Create an Account</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>
                            Welcome Back ! <br>
                            Please Login now
                        </h3>
                        <form class="row contact_form" asp-action="Login" id="login-form">
                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Username" type="text" class="form-control"
                                       placeholder="Username">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input asp-for="Password" type="password" class="form-control"
                                       placeholder="Password">
                            </div>
                            <div class="col-md-12 form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!-- Display validation summary -->
                                <button type="submit" name="signin" id="signin" class="btn_3">
                                    Login
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================login_part end =================-->
