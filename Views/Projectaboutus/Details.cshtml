@model GiftStore.Models.Projectaboutu

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">

<h1>Details</h1>

<div>
    <hr />
            <dl class="row align-items-center justify-content-center">
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/Images/AboutImages/"+ Model.Image)" asp-append-version="true" style="width:100px;height:100px;border-radius:20%;">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a asp-action="ManageWebsitePages" asp-controller="Admin">Back to List</a>
</div>
    </div>
</div>
